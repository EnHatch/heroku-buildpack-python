#!/usr/bin/env bash
VENDORED_FFMPEG="https://s3.amazonaws.com/enhatch-repositories/libraries/vendor/ffmpeg.tar.gz"

PKG_CONFIG_PATH="/app/.heroku/vendor/lib/pkgconfig:$PKG_CONFIG_PATH"

# Syntax sugar.
source $BIN_DIR/utils

bpwatch start ffmpeg_install

# If FFmpeg exists within requirements, use vendored ffmpeg.
if (pip-grep -s requirements.txt av &> /dev/null) then

  if [ -d ".heroku/vendor/ffmpeg" ]; then
    export FFMPEG=$(pwd)/vendor
  else
    echo "-----> Noticed PyAV. Bootstrapping ffmpeg."
    mkdir -p .heroku/vendor
    # Download and extract ffmpeg into target vendor directory.
    curl $VENDORED_FFMPEG -s | tar zxv -C .heroku/vendor &> /dev/null

    export FFMPEG=$(pwd)/vendor
  fi

  set-env PATH '$HOME/.heroku/vendor/ffmpeg/bin:$PATH'
  set-env LIBRARY_PATH '$HOME/.heroku/vendor/ffmpeg/lib:$LIBRARY_PATH'
  set-env LD_LIBRARY_PATH '$HOME/.heroku/vendor/ffmpeg/lib:$LD_LIBRARY_PATH'
  set-env PKG_CONFIG_PATH '$HOME/.heroku/vendor/ffmpeg/lib/pkgconfig:$PKG_CONFIG_PATH'

  export PATH=$HOME/.heroku/vendor/ffmpeg/bin:$PATH
  export LIBRARY_PATH=$HOME/.heroku/vendor/ffmpeg/lib:$LIBRARY_PATH
  export LD_LIBRARY_PATH=$HOME/.heroku/vendor/ffmpeg/lib:$LD_LIBRARY_PATH
  export PKG_CONFIG_PATH=$HOME/.heroku/vendor/ffmpeg/lib/pkgconfig:$PKG_CONFIG_PATH
fi

bpwatch stop ffmpeg_install
